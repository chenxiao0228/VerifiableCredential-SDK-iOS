use_frameworks!

platform :ios, '11.0'
workspace '../sdk'

def sdk_pods
  pod 'SSZipArchive'
end

def serialization_pods
  podspec :path => '../serialization/serialization.podspec'
end

def networking_pods
  podspec :path => '../networking/networking.podspec'
end

target 'sdk' do
  project '../sdk/sdk.xcodeproj'
  sdk_pods
  networking_pods
  target 'sdkTests'
end

target 'serialization' do
  project '../serialization/serialization.xcodeproj'
  serialization_pods
  target 'serializationTests'
end

target 'networking' do
  project '../networking/networking.xcodeproj'
  networking_pods
  podspec :path => '../serialization/serialization.podspec'
  target 'networkingTests'
end

#pod "Networking", :path => '../networking/networking.podspec'

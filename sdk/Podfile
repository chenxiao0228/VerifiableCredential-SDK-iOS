use_frameworks!

platform :ios, '11.0'
workspace '../sdk'

def serialization_pods
  podspec :path => '../serialization/serialization.podspec'
end

def networking_pods
  podspec :path => '../networking/networking.podspec'
end

def vccrypto_pods
  podspec :path => '../VCCrypto/VCCrypto.podspec'
end

target 'sdk' do
  project '../sdk/sdk.xcodeproj'
  pod 'Networking', path: '../networking'
  pod 'Serialization', path: '../serialization'
  target 'sdkTests'
end

target 'VCNetworking' do
  project '../networking/networking.xcodeproj'
  pod 'Serialization', path: '../serialization'
  networking_pods
  target 'networkingTests'
end

target 'VCSerialization' do
  project '../serialization/serialization.xcodeproj'
  serialization_pods
  target 'serializationTests'
end

target 'VCCrypto' do
  project '../VCCrypto/VCCrypto.xcodeproj'
  vccrypto_pods
  target 'VCCryptoTests'
end
